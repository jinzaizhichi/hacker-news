{
  "name": "hacker-news",
  "version": "0.2.0",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "simple-git-hooks && npm run -s cf-typegen",
    "dev:worker": "wrangler dev --cwd worker --persist-to ../.wrangler/state",
    "deploy:worker": "wrangler deploy --cwd worker",
    "logs:worker": "wrangler tail --cwd worker",
    "tests": "wrangler dev --cwd tests --remote",
    "opennext": "opennextjs-cloudflare build",
    "preview": "npm run -s opennext && wrangler dev",
    "deploy": "npm run -s opennext && WRANGLER_BUILD_PLATFORM=node wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.64",
    "@cloudflare/puppeteer": "^1.0.4",
    "@echristian/edge-tts": "^0.0.14",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-store": "^0.8.0",
    "@tanstack/store": "^0.8.0",
    "@vidstack/react": "^1.12.13",
    "ai": "^5.0.89",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "i18next": "^25.6.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.553.0",
    "markdown-it": "^14.1.0",
    "media-icons": "^1.1.5",
    "motion": "^12.23.24",
    "next": "^16.0.1",
    "ofetch": "^1.5.1",
    "podcast": "^2.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.2.4",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "vidstack": "^1.12.13",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@ast-grep/napi-darwin-arm64": "^0.39.9",
    "@ast-grep/napi-linux-x64-gnu": "^0.39.9",
    "@eslint-react/eslint-plugin": "^2.3.1",
    "@opennextjs/cloudflare": "^1.11.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "<23",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.1",
    "eslint-plugin-format": "^1.0.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "puppeteer": "22.8.2",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "wrangler": "^4.46.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
